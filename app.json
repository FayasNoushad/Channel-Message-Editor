{
    "name": "Channel-Message-Editor",
    "description": "A telegram channel messages editor bot",
    "repository": "https://github.com/FayasNoushad/Channel-Message-Editor",
    "keywords": [
        "Telegram",
        "Channel",
        "Message",
        "Editor",
        "Pyrogram"
    ],
    "env": {
        "BOT_TOKEN": {
            "description": "Your Bot token from @Botfather"
        },
        "API_ID": {
            "description": "Your API_ID from https://my.telegram.org/apps"
        },
        "API_HASH": {
            "description": "Your API_HASH from https://my.telegram.org/apps"
        },
        "AUTH_USERS": {
            "description": "Bot admins ids (only bot admin can use the bot)"
        }
    },
    "buildpacks": [
        {
            "url": "heroku/python"
        }
    ]
}
